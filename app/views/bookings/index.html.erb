<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Reference</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= @user.name %></td>
        <td><%= booking.reference %></td>
        <td><%= booking.details %></td>
        <td><%= link_to 'Show', user_booking_path(@user,booking) %></td>
        <td><%= link_to 'Edit', edit_user_booking_path(@user,booking) %></td>
        <td><%= link_to 'Destroy', user_booking_path(@user, booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path %>
| <%= link_to 'Back', user_path(@user) %>
| <%= link_to 'New Booking', new_user_booking_path(@user) %>
